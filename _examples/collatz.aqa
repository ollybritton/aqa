# The Collatz Conjecture
#Â https://en.wikipedia.org/wiki/Collatz_conjecture

val <- INPUT("Please enter a start number: ")
val <- STRING_TO_INT(val)
steps <- 1

WHILE val != 1
  steps <- steps+1
  OUTPUT val
  if val MOD 2 == 0 then
    val <- val / 2
  else
    val <- 3*val + 1
  endif
ENDWHILE

OUTPUT val

OUTPUT ""
PRINT("It took", steps, "steps in total to reach 1.")
